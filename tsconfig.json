{
	"compilerOptions": {
		"target": "ES2017",
		"experimentalDecorators": true,
		"outDir": "./dist/",
		"module": "commonjs",
		"sourceMap": true,
		"importsNotUsedAsValues": "error",
		"lib": [
			"DOM",
			"ES6",
			"ES2017"
		],
		"types": [
			"@league-of-foundry-developers/foundry-vtt-types"
		],
		"moduleResolution": "node",
		"strictNullChecks": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
        "src/global.d.ts"
	]
}
