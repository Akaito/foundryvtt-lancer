<form class="{{cssClass}} lancer-sheet" autocomplete="off">
  
  {{!-- Sheet Header --}}
  <header class="sheet-header card clipped-bot">
    <div class="flexrow">
      <div class="header-fields">
        <h1 class="charname"><input class="header-field" name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
      </div>
      {{{ ref-portrait-img item.img "img" mm }}}
    </div>
  </header>
  <div class="flexcol">
    {{!-- Weapon Stats --}}
    <div class="flexrow">
      {{{item-edit-arrayed-range        "mm.Range"     "RANGE"}}}
      {{{item-edit-arrayed-damage       "mm.Damage"    "DAMAGE"}}}
    </div>
    <div class="flexrow">
      {{#if mm.IsLoading}}
        {{{ std-checkbox "mm.Loaded" label="LOADED:" }}}
      {{/if}}
      {{#if mm.IsLimited}}
        {{{item-edit-uses "mm.Uses" "data.derived.max_uses"}}}
      {{/if}}
    </div>

    {{{textarea-card "DESCRIPTION" "mm.Description"}}}
    {{{textarea-card "EFFECT" "mm.Effect"}}}

    {{!-- Bonuses --}}
    {{{item-edit-arrayed-actions      "mm.Actions"        "ACTIONS"}}}
    {{{item-edit-arrayed-bonuses      "mm.Bonuses"}}}
    {{{item-edit-arrayed-deployables  "mm.Deployables"                "DEPLOYABLES"}}}
    {{{item-edit-arrayed-synergies    "mm.Synergies"                  "SYNERGIES"}}}

    {{!-- Tags --}}
    <div class="card full">
      <span class="lancer-header major">TAGS</span>
      {{{mm-tag-list "mm.Tags" mm.Tags editable}}}
    </div>

  </div>

</form>